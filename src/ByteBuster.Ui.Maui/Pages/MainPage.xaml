<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ByteBuster.Ui.Maui.Pages.MainPage"
             xmlns:viewmodel="clr-namespace:ByteBuster.Ui.Maui.ViewModels"
             x:DataType="viewmodel:MainViewModel">
    <Grid>
        <Image
            Source="stacked_waves.png"
            Aspect="AspectFill"
            VerticalOptions="Fill"
            HorizontalOptions="Fill" />
        <ScrollView Padding="20">
            <VerticalStackLayout
                
                Padding="25,25"
                Spacing="50">

                <Button Text="Neues Spiel"></Button>
            
                <Button Text="Spiel Laden"></Button>
        
                <Button Text="Einstellungen"></Button>
        
                <Button Text="Highscore"
                        Command="{Binding TapCommand}"></Button>
                <Button Text="Beenden"></Button>
                
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>