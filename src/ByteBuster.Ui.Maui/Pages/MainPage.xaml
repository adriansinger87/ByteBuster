<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ByteBuster.Ui.Maui.Pages.MainPage"
             xmlns:viewmodel="clr-namespace:ByteBuster.Ui.Maui.ViewModels"
             x:DataType="viewmodel:MainViewModel">
    <VerticalStackLayout Spacing="10">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label 
            Text="123"
            VerticalOptions="Center" 
            HorizontalOptions="Center" FontSize="60" TextColor="Blue" />
        
        
        <Button Text="Neues Spiel"></Button>
        
        <Button Text="Spiel Laden"></Button>
        
        <Button Text="Einstellungen"></Button>
        
        <Button Text="Highscore"
                Command="{Binding TapCommand}"></Button>
        
        <Button Text="Beenden"></Button>
        
    </VerticalStackLayout>
</ContentPage>